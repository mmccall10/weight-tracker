<div class="w-full rounded overflow-hidden shadow-md">
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2">New Entry</div>

    <%= form_with(model: entry, local: true) do |form| %>
      <% if entry.errors.any? %>

        <div role="alert">
          <div class="bg-red-500 text-white font-bold rounded-t px-4 py-2">
            <%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:
          </div>
          <div class="border border-t-0 border-red-400 rounded-b bg-red-100 px-4 py-3 text-red-700">
            <% entry.errors.full_messages.each do |message| %>
              <p><%= message %></p>
            <% end %>

          </div>
        </div>

      <% end %>
      <form class="w-full max-w-lg">
        <div class="flex flex-wrap -mx-3 mb-6">
          <div class="w-full  px-3 mb-6 md:mb-0">
            <div class="flex flex-wrap -mx-3 mb-6">
              <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
                  Weight
                </label>
                <%= form.text_field :weight, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
              </div>
            </div>
            <div class="flex flex-wrap -mx-3 mb-6">
              <div class="w-full px-3">
                <label class="block uppercase tracking-wide text-gray-700 text-xs font-bold mb-2">
                  Date
                </label>
                <%= form.text_field :date_entered, class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
              </div>
            </div>
          </div>
        </div>
        <div class="md:flex md:items-center">

          <button class="shadow bg-blue-500 hover:bg-blue-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="submit">
            Submit
          </button>
        </div>
      </form>

    <% end %>

  </div>

</div>






